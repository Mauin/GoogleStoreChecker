{
  "manifest_version": 2,

  "name": "Google Store Nexus Refresher",
  "description": "Extension that automatically refreshes the Nexus 5X/6P store pages to check for updates (e.g. it's available)",
  "version": "1.0",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "notifications",
    "https://store.google.com/product/nexus_6p"
  ]
}
