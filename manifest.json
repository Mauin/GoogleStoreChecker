{
  "manifest_version": 2,

  "name": "Google Store Nexus Refresher",
  "description": "Extension that automatically refreshes the Nexus 5X/6P store pages to check for updates (e.g. it's available)",
  "version": "0.1",

  "browser_action": {
    "default_icon": "res/icon.png"
  },
  "background": {
    "scripts": [
      "lib/jquery.js",
      "src/http.js",
      "src/notification.js",
      "src/storage.js",
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "notifications",
    "https://store.google.com/"
  ]
}
