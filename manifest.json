{
  "manifest_version": 2,

  "name": "Google Store Availablility Checker",
  "description": "Extension that automatically refreshes a Google Store store pages in the background to notiy you about changes. Saves your F5 key while waiting for new devices!",
  "version": "1.2.0",

  "icons": {
    "16": "res/icon_16.png",
     "48": "res/icon_48.png",
    "128": "res/icon_128.png"
  },
  "browser_action": {
    "default_icon": "res/icon_128.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": [
      "lib/jquery.js",
      "background/constants.js",
      "background/product.js",
      "background/http.js",
      "background/parsing.js",
      "background/sync.js",
      "background/notification.js",
      "background/listener.js",
      "background/storage.js",
      "background/devices.js",
      "background/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "notifications",
    "storage",
    "https://store.google.com/"
  ]
}
